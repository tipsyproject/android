<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/layout">

        <fragment
            class="com.tipsy.app.orga.vestiaire.in.CarnetTicketsFragment"
            android:id="@+id/fragTickets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            tools:layout="@layout/frag_bar_conso" />

        <fragment
            class="com.tipsy.app.orga.vestiaire.in.PanierFragment"
            android:id="@+id/fragPanier"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:layout_gravity="center"
            tools:layout="@layout/frag_vestiaire_panier" />
    </LinearLayout>

</RelativeLayout>