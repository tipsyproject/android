<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mon Event"
            android:id="@+id/textEvent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="EntrÃ©e"
                android:id="@+id/buttonEntree"
                android:src="@drawable/ic_action_group"
                style="@style/ButtonEvent"
                android:drawableTop="@drawable/ic_action_group" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Bar"
                android:id="@+id/buttonBar"
                android:src="@drawable/ic_action_person"
                style="@style/ButtonEvent"
                android:drawableTop="@drawable/ic_action_group" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout2">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Vestiaire"
                android:id="@+id/buttonVestiaire"
                android:src="@drawable/ic_action_person"
                style="@style/ButtonEvent"
                android:drawableTop="@drawable/ic_action_group" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Are you Tipsy ?"
                android:id="@+id/buttonAlcooTips"
                android:src="@drawable/ic_action_person"
                style="@style/ButtonEvent"
                android:drawableTop="@drawable/ic_action_group" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>