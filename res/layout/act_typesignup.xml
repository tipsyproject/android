<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/bg">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:clickable="false"
        android:longClickable="false"
        android:measureWithLargestChild="false"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:weightSum="1">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>


        <Button
            android:layout_width="match_parent"
            android:onClick="OnClickInscription"
            android:layout_height="@dimen/bar_height"
            android:id="@+id/button1"
            android:drawableLeft="@drawable/ic_action_mail_add"
            android:paddingLeft="@dimen/activity_margin"
            android:layout_marginTop="@dimen/ui_margin"
            android:text="@string/inscription"
            android:layout_weight="0.6"
            android:clickable="true"
            android:layout_below="@+id/sign_in_button"/>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:onClick="OnClickOrga"
        android:layout_height="@dimen/bar_height"
        android:id="@+id/button2"
        android:drawableRight="@drawable/ic_action_send"
        android:drawablePadding="@dimen/activity_margin"
        android:paddingRight="@dimen/bar_height"
        android:text="@string/orgasign"
        android:clickable="true"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>