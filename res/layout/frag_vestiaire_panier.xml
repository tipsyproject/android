<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_dark">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutParticipant"
        android:focusableInTouchMode="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCancel"
            android:src="@drawable/ic_action_remove"
            android:padding="@dimen/activity_margin"
            android:alpha="1"
            android:background="@color/background_dark"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lennie Bar"
            android:id="@+id/textParticipant"
            android:gravity="center"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listPanier"
        android:choiceMode="singleChoice"
        android:layout_above="@+id/buttonValider"
        android:layout_below="@+id/layoutParticipant"
        android:divider="@null" />




    <Button
        style="@style/Button_Style.Green"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bar_height"
        android:text="Valider"
        android:id="@+id/buttonValider"
        android:textSize="23dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>