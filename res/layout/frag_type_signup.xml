<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_type_signup"
    android:weightSum="1">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:clickable="false"
        android:longClickable="false"
        android:measureWithLargestChild="false"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:weightSum="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_height"
            android:text="Google"
            android:id="@+id/sign_in_button"
            android:drawableLeft="@drawable/google_plus"
            android:paddingLeft="@dimen/activity_margin"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_height"
            android:onClick="onClickFb"
            android:text="Facebook"
            android:id="@+id/fb"
            android:drawableLeft="@drawable/fb_icon"
            android:layout_marginTop="@dimen/ui_margin"
            android:paddingLeft="@dimen/activity_margin"
            android:layout_below="@+id/sign_in_button"
            android:layout_centerHorizontal="true"
            android:clickable="true" />

        <Button
            android:layout_width="match_parent"
            android:onClick="onClickInscription"
            android:layout_height="@dimen/bar_height"
            android:id="@+id/button1"
            android:drawableLeft="@drawable/ic_action_new_email"
            android:paddingLeft="@dimen/activity_margin"
            android:layout_marginTop="@dimen/ui_margin"
            android:layout_below="@+id/fb"
            android:text="@string/email"
            android:layout_weight="0.6"
            android:clickable="true" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:onClick="onClickOrga"
        android:layout_height="@dimen/bar_height"
        android:id="@+id/button2"
        android:drawableRight="@drawable/ic_action_next_item"
        android:drawablePadding="@dimen/activity_margin"
        android:paddingRight="@dimen/bar_height"
        android:text="@string/orgasign"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>