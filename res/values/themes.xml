<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!--   <item name="android:checkboxStyle">@color/text_menu</item>-->
        <item name="android:textColor">@color/text_menu</item>
        <item name="android:buttonStyle">@style/Button_Style.Blue</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:editTextColor">@color/text_menu</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/Button_Style.Blue</item>
    </style>

    <style name="AppTheme.NoActionBar.White" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/background_menu</item>
        <item name="android:buttonStyle">@style/Button_Style.White</item>
    </style>

    <style name="MyActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/text_menu</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
        <item name="android:backgroundStacked">@color/tab_action_bar</item>
        <item name="android:selectableItemBackground">@color/text</item>
        <item name="android:actionBarTabStyle">@color/text</item>
    </style>

    <style name="ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/background_menu</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button_Style">
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="Button_Style.Blue">
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:textColor">@color/button_color</item>
    </style>

    <style name="Button_Style.White">
        <item name="android:background">@drawable/button_white</item>
        <item name="android:textColor">@color/menu_color</item>
    </style>

    <style name="Checkbox_Style">
        <item name="android:textColor">@color/text_hint</item>

    </style>

    <style name="ImageButton_Style">
        <item name="android:background">@color/button_red_unpressed</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

</resources>